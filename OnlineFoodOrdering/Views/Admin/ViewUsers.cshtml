@model OnlineFoodOrdering.Models.Application.ViewModels.CustomerAccountsViewModel

@{
    ViewBag.Title = "Admin: View Customers";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container">
    <h2 class="text-center bg-info">All Customers</h2>
    <hr />

    
    <table class="table">
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>Contact Number</th>
                <th> </th>
            </tr>
        </thead>
        @foreach (var Customer in Model.Customers)
        {
            <tbody>

                <tr>
                    <td>@Customer.FirstName</td>
                    <td>@Customer.LastName</td>
                    <td>@Customer.User.UserName</td>
                    <td>@Customer.ContactNumber</td>
                    <td></td>
                </tr>

            </tbody>
        }
        </table>
    </div>
    

</div>
