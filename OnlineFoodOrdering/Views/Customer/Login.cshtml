
@{
    ViewBag.Title = "Login";
}

@model OnlineFoodOrdering.Models.Customer

<h2>Login</h2>
@using (@Html.BeginForm("Login", "Customer"))
{
<div class="form-group">
    @Html.LabelFor(c => c.email)
    @Html.TextBoxFor(c => c.email, new {@class="form-control" })
</div>

<div class="form-group">
    @Html.LabelFor(c => c.password)
    @Html.TextBoxFor(c => c.password, new { @class = "form-control" })
</div>
 

    <button type="submit" class="btn btn-success">Login</button>
    <button type="reset" class="btn btn-danger">reset</button>

}
