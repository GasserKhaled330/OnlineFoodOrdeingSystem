<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Hunter</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>

                <div>
                    <a href="@Url.Action("FoodItemsList","FoodItem")">
                        <img class="navbar-brand " src="~/images/hunter-logo.png" alt="Hunter" />
                    </a>
                </div>
            </div>

            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "FoodItemsList", "FoodItem")</li>

                </ul>
                <ul class="nav navbar-nav navbar-right">

                    @if (User.IsInRole("Customer"))
                    {
                        <li>@Html.Action("CartSummary","ShoppingCart")</li>
                        <li><a>Hello - @User.Identity.Name</a></li>
                        <li>@Html.ActionLink("Logout", "Logout", "Account")</li>
                    }
                    else
                    {
                        <li>
                            <a href="@Url.Action("Signup", "Account")">
                                <span class="glyphicon glyphicon-user"></span> Sign Up
                            </a>
                        </li>
                        <li>
                            <a href="@Url.Action("Login", "Account")">
                                <span class="glyphicon glyphicon-log-in"></span> Log In
                            </a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>

    <div>
        @RenderBody()
        <hr />
    </div>

    <footer class="fixed-bottom text-center">
        <p>&copy; @DateTime.Now.Year - Hunter</p>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script src="~/Scripts/Site.js"></script>
</body>
</html>